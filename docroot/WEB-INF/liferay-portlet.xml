<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>sqldatatable</portlet-name>
		<icon>/icon.png</icon>
        <configuration-action-class>com.liferay.portal.kernel.portlet.DefaultConfigurationAction</configuration-action-class>
		<instanceable>true</instanceable>
        <scopeable>true</scopeable>
		<requires-namespaced-parameters>false</requires-namespaced-parameters>
		<header-portlet-css>/css/main.css</header-portlet-css>
        <header-portlet-css>/css/dataTables.bootstrap.css</header-portlet-css>
        <header-portlet-css>/css/dataTables.colReorder.css</header-portlet-css>
        <header-portlet-css>/css/dataTables.fixedColumns.css</header-portlet-css>
        <header-portlet-javascript>/js/jquery.js</header-portlet-javascript>
        <header-portlet-javascript>/js/jquery.dataTables.js</header-portlet-javascript>
        <header-portlet-javascript>/js/dataTables.bootstrap.js</header-portlet-javascript>
        <header-portlet-javascript>/js/dataTables.colReorder.js</header-portlet-javascript>
        <header-portlet-javascript>/js/dataTables.fixedColumns.js</header-portlet-javascript>
        <header-portlet-javascript>/js/sqlDataTable.js</header-portlet-javascript>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>sql-datatable-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>sqldatasource</portlet-name>
		<icon>/icon.png</icon>
		<control-panel-entry-category>
			configuration
		</control-panel-entry-category>
		<control-panel-entry-weight>7</control-panel-entry-weight>
		<control-panel-entry-class>io.github.flarroca.liferay.sql.datasource.SQLDataSourceControlPanelEntry</control-panel-entry-class>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>sql-datasource-portlet</css-class-wrapper>
        <system>true</system>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>